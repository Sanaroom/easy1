<%= render "shared/header" %>
<div class='new-main'>
  <div class='new-messages'>
    <%= form_with model: @check, url:checks_path,local: true do |f| %>
        <div class='message1'>
          わたしは、<br><br>
          (<%= f.text_area :number, class:"check-number", id:"check-number", placeholder:"番号" %>
          番さん)<br><br>
         
          <%= f.text_area :attendance, value: @default_text, readonly: true, class:"check-attendance", id:"check-attendance", placeholder:"欠席" %>
        </div>

        <div class="check_button">
          <%= f.submit "とうろくボタン" ,class:"check-btn" %>      
        </div>
    <%end%>
  </div>
</div>
