<%= render "shared/header_top2" %>
<div class='new-main'>
  <div class='new-messages'>
    <%= form_with model: @check, url:checks_path,local: true do |f| %>
        <div class='message1'>
          今日、わたしは、<br><br>
          (<%= f.collection_select(:number_id, @available_numbers, :id, :name, {}, { include_blank: false, class:"check-number"}) %>
          番さん)<br><br>
         
          
          <%= f.collection_select(:attendance_id, Attendance.all, :id, :name, { disabled: [2,3] ,selected:1 }, {class:"check-number"}) %>です。
          
        </div>

        <div class="check_button">
          <%= f.submit "とうろくボタン🦍" ,class:"check-btn",id:"sign-in2" %>
        </div>
    <%end%>
  </div>
</div>
