<%= render "shared/header" %>

<div class='show-main'>
  <div class="show-check">
    <style>
      table {
        width: 500px;
        line-height: 13px;
        border-collapse: collapse; /* テーブルセルの境界を結合し、線を表示 */
      }

      th, td {
        border: 1px solid #000; /* セルの境界線 */
        padding: 8px; /* セル内の余白 */
        text-align: left; /* テキストの配置 */
      }

      th {
        background-color: #f2f2f2; /* ヘッダーの背景色 */
      }
    </style>

    <table class='check-show-table'>
      <thead>
        <tr>
          <th>出席番号</th>
          <th>出席確認</th>
          <th>登校時間</th>
        </tr>
      </thead>
      <tbody>
        <% @checks.each do |check| %>
          <tr>
            <td><%= check.number %></td>
            <td><%= check.attendance %></td>
            <td><%= check.created_at.localtime.strftime("%H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="count">
    <p><%= @check_count %>人</p>
    </div>


  </div>
   
   

  <%# 先生からのコメントの表示 %>
  <div class='show-comment'>
    <div class="teacher-comment">
      ＜先生からのお知らせ＞
    </div>
      <% @comments.each do |comment| %>
        <p><%= comment.board %></p>
      <% end %>
  </div>
  <%# 先生からのコメントの表示 %>

</div>