<%= render "shared/header" %>

<div class='show-main'>
  <div class="show-check">
    <style>
      table {
        
        width: 400px;
        line-height: 13px;
        border-collapse: collapse; /* テーブルセルの境界を結合し、線を表示 */
      }

      th, td {
        border: 1px solid #000; /* セルの境界線 */
        padding: 7px; /* セル内の余白 */
        text-align: left; /* テキストの配置 */
      }

      th {
        background-color: #f2f2f2; /* ヘッダーの背景色 */
      }

      
    </style>

    <table class='check-show-table'>
      <thead>
        <tr>
          <th>出席番号</th>
          <th>出席確認</th>
          <th>登校時間</th>
        </tr>
      </thead>
      <tbody>
        <% @checks.each do |check| %>
          <tr>
            <td><%= check.number.name %></td>
            <td style="<%= 
              if check.attendance.name == '出席'
                'background-color: #00FF00;' 
              elsif check.attendance.name == '欠席'
                'background-color: rgb(235, 163, 135);'
              elsif check.attendance.name == '遅刻'
                'background-color: skyblue;'
              else
                ''
              end
            %>"> <%= check.attendance.name %></td>
            

            <td><%= check.created_at.localtime.strftime("%H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="count">
      <div class="number-count">
        <p>登録済み：<%= @check_count %>人</p>
      </div>
      <div class="attendance-count">
        <p class="count1">出席：<%= @attendance_count1 %>人</p>
        <p class="count2">欠席：<%= @attendance_count2 %>人</p>
        <p class="count3">遅刻：<%= @attendance_count3 %>人</p>
      </div>
    </div>
  </div>
   
   

  <%# 先生からのコメントの表示 %>
  <div class='show-comment'>
    <div class="teacher-comment">
      ＜先生からのお知らせ＞
    </div>
    
      <% @comments.each do |comment| %>
        <p class="comment22"><%= comment.board %></p>
      <% end %>
    
  </div>
  <%# 先生からのコメントの表示 %>

</div>